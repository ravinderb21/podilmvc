@model podil.ViewModels.UploadPhotoViewModel
@{
    ViewBag.Title = "Add New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Upload Photo</h2>
@using (Html.BeginForm("Upload", "Photos", FormMethod.Post, new { enctype="multipart/form-data" }))
{
    @Html.ValidationSummary(true, "Please correct highlighted errors.")


    <div clss="form-group">
        @Html.LabelFor(p => p.PhotoFile)
        <input type="file" name="PhotoFile" class="form-control-file" />
    </div>

    <div clss="form-group">
        @Html.LabelFor(p => p.Photo.Description)
        @Html.TextBoxFor(p => p.Photo.Description, new { @class = "form-control" })
    </div>
    <div clss="form-group">
        @Html.LabelFor(p => p.Photo.CategoryType)
        @Html.DropDownListFor(p => p.Photo.CategoryTypeId,
            new SelectList(Model.CategoryTypes, "Id", "Category"), "Please select a category", new { @class = "form-control" })
    </div>
    @Html.AntiForgeryToken()
    <input type="submit" class="btn btn-primary" value="Upload" />
}

