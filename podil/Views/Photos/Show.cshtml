@model podil.Models.Photo
@{
    ViewBag.Title = "Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var PhotosFolderPath = System.Web.Configuration.WebConfigurationManager.AppSettings["PhotosFolderPath"];
}

<div class="container">
    <div class="row">
        <div class="col">
            <h2>@Model.CategoryType.Category</h2>

            <div class="card box-shadow">
                <img class="card-img" src="@Url.Content(PhotosFolderPath + Model.FileName)" />
                <div class="card-body">
                    <h5 class="card-title">@Model.Description</h5>
                    <div class="card-text">
                        Date added: @Model.DateAdded.ToString("MMMM dd, yyyy")
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


